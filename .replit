modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Child App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Therapist Portal"

[[workflows.workflow]]
name = "Child App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m http.server 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Therapist Portal"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd therapist-portal && export NODE_OPTIONS=\"--max_old_space_size=1024\" && npx next dev --port 5000 --hostname 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
